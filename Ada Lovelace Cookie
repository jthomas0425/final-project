import pygame
import sys

# Initialize Pygame
pygame.init()

# Constants
WIDTH, HEIGHT = 800, 600
WHITE = (255, 255, 255)
FPS = 60

# Create the display surface
screen = pygame.display.set_mode((WIDTH, HEIGHT))
pygame.display.set_caption("Ada Lovelace's Cookie Clicker")
clock = pygame.time.Clock()

# Load Ada Lovelace's face
ada_image = pygame.image.load("ada_lovelace_face.png")
# Scale the image to an appropriate size
ada_image = pygame.transform.scale(ada_image, (200, 200))
# Get the rectangle of the image
ada_rect = ada_image.get_rect()
ada_rect.center = (WIDTH // 2, HEIGHT // 2)

cookie_count = 0

running = True
while running:
    screen.fill(WHITE)

    # Event handling
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False
        elif event.type == pygame.MOUSEBUTTONDOWN:
            # Check if the mouse click is on Ada's face
            if ada_rect.collidepoint(event.pos):
                cookie_count += 1

    # Draw Ada's face
    screen.blit(ada_image, ada_rect)

    # Display cookie count
    font = pygame.font.Font(None, 36)
    text = font.render(f"Cookies: {cookie_count}", True, (0, 0, 0))
    screen.blit(text, (10, 10))

    pygame.display.flip()
    clock.tick(FPS)

pygame.quit()
sys.exit()
